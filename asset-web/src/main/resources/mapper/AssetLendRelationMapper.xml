        </if>
    </select>
    <select id="queryInfo" resultType="com.antiy.asset.vo.response.AssetLendRelationResponse">
        select
          lend_status as lendStatus,
          lend_time as lendTime,
          lend_periods as lendPeriods,
          lend_purpose as lendPurpose,
          au.name as useName,
          aooh.order_number as  orderNumber,
          a.name as assetName ,
          a.number as assetNumber,
          a.asset_group as assetGroup,
          a.category_model as categoryModel,
          akm.key_num as keyNum
          from
          asset_lend_relation as alr
          left join asset as a on alr.asset_id=a.id and a.status=1
          left join asset_key_manage as akm on alr.asset_id=akm.key_user_id and akm.is_delete=1
          left join asset_user as au on use_id=au.id and au.status=1
          left join  asset_oa_order_handle as aooh on aooh.asset_id=alr.asset_id
          where alr.unique_id=#{uniqueId} and alr.status=1
    </select>
