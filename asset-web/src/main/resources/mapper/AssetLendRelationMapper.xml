    <select id="findCount" resultType="int" parameterType="com.antiy.common.base.ObjectQuery">
        SELECT
          count(*)
        FROM asset  as a
        left join asset_user as au on a.responsible_user_id=au.id and au.status=1
        left join asset_key_manage as akm on a.id=akm.key_user_id and akm.is_delete=1
        left join  asset_lend_relation as alr
        on a.id=alr.asset_id and alr.lend_status =1 and alr.status=1
        left join asset_user  on asset_user.id=alr.use_id and asset_user.status=1
        <trim prefix="where" prefixOverrides="and">
            <include refid="baseQuery"/>
            and a.is_borrow=1
            and a.asset_status =5
            and a.status=1
            order by alr.lend_time desc ,a.first_enter_nett desc
        </trim>
    </select>

    <select id="findQuery" resultType="com.antiy.asset.vo.response.AssetLendRelationResponse" parameterType="com.antiy.common.base.ObjectQuery">
        SELECT
        a.id as assetId,
        a.name as  assetName,
        a.number as assetNumber,
        acm.name as categoryModel,
        a.responsible_user_id as responsibleUserId,
        akm.key_num as keyNum,
        alr.lend_status as lendStatus,
        alr.use_id as useId,
        alr.lend_time as lendTime,
        alr.lend_periods as lendPeriods,
        alr.unique_id as uniqueId,
        au.name as responsibleUserName,
        asset_user.name as useName
        FROM asset  as a
        left join asset_user as au on a.responsible_user_id=au.id and au.status=1
        left join asset_key_manage as akm on a.id=akm.key_user_id and akm.is_delete=1
        left join asset_category_model as acm on acm.id=a.category_model and acm.status=1
        left join  asset_lend_relation as alr
        on a.id=alr.asset_id and alr.lend_status =1 and alr.status=1
        left join asset_user  on asset_user.id=alr.use_id and asset_user.status=1
        <trim prefix="where" prefixOverrides="and">
            <include refid="baseQuery"/>
            and a.is_borrow=1
            and a.asset_status =5
            and a.status=1
            order by alr.lend_time desc ,a.first_enter_nett desc
        </trim>
