        </if>
    </select>
    <select id="queryApproveList" resultType="com.antiy.asset.vo.response.ApproveListResponse">
        SELECT
            aoo.id AS orderId,
            aoo.number AS orderNumber,
            aooa.apply_user_name AS orderUser,
            aoo.gmt_create AS time
        FROM
            asset_oa_order aoo
            LEFT JOIN asset_oa_order_apply aooa ON aoo.number = aooa.order_number
        WHERE
            aoo.order_type = 4
            AND aoo.order_status = 1
        <if test=" blurQueryField != null">
            and ( aoo.number LIKE CONCAT('%',replace(replace(#{blurQueryField},'%','\%'),'_','\_'),'%')
            or aooa.apply_user_name LIKE CONCAT('%',replace(replace(#{blurQueryField},'%','\%'),'_','\_'),'%'))
        </if>
        order by aoo.gmt_create
        <if test="pageSize !=-1">
            LIMIT #{pageSize} offset #{pageOffset}
        </if>
    </select>
    <select id="queryApproveListCount" resultType="java.lang.Integer">
        SELECT
            COUNT( 1 )
        FROM
            (
        SELECT
            aoo.id
        FROM
            asset_oa_order aoo
            LEFT JOIN asset_oa_order_apply aooa ON aoo.number = aooa.order_number
        WHERE
            aoo.order_type = 4
            AND aoo.order_status = 1
            <if test=" blurQueryField != null">
                and ( aoo.number LIKE CONCAT('%',replace(replace(#{blurQueryField},'%','\%'),'_','\_'),'%')
                or aooa.apply_user_name LIKE CONCAT('%',replace(replace(#{blurQueryField},'%','\%'),'_','\_'),'%'))
            </if>
            ) a
    </select>
    <sql id="baseQuery">
        <if test='multiQuery !=null and multiQuery!="" '>
            (
            a.name LIKE CONCAT('%',replace(replace(#{multipleQuery},'%','\%'),'_','\_'),'%')
            or
            a.number LIKE CONCAT('%',replace(replace(#{multipleQuery},'%','\%'),'_','\_'),'%')
            or
            akm.key_num LIKE CONCAT('%',replace(replace(#{multipleQuery},'%','\%'),'_','\_'),'%')
            )
        </if>

        <if test="areaIds !=null and areaIds.size()>0">
            a.area_id in
            <foreach collection="areaIds" item="item" open="(" close=")" separator=",">
                #{item}
            </foreach>
        </if>
        <if test="currentUseId !=null">
            and
            (
            alr.use_id=#{currentUseId} or ( a.responsible_user_id=#{currentUseId} and alr.use_id is null )
            )
        </if>
        <if test="lendTime !=null">
            and alr.lend_time &lt;= #{lendTime}
        </if>
        <if test="lendPeriods !=null">
            and alr.lend_periods &gt;= #{lendPeriods}
        </if>
        <if test='categoryModels !=null and categoryModels.size()>0 '>
            and a.category_model in
            <foreach collection="categoryModels" item="item" open="(" close=")" separator=",">
                #{item}
            </foreach>
        </if>
        <if test='lendStatus !=null and lendStatus.size()>0 '>
            and alr.lend_status in
