        select * from
        <include refid="Table_Name"></include>
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
        </trim>
        <if test="pageSize !=-1">
            LIMIT #{pageSize} offset #{pageOffset}
        </if>
    </select>


    <select id="getLatestRunRecordByStartTime" resultMap="BaseResultMap">
        select * from
        <include refid="Table_Name"></include>
        order by start_time desc limit 1
    </select>

    <select id="getRunDayTime" resultType="java.lang.Long">
        select SUM(difference_value) from
        <include refid="Table_Name"></include>
    </select>
</mapper>