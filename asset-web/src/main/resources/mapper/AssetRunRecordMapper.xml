        <if test=" startTime != null">
            #{startTime },
        </if>
        <if test=" stopTime != null">
            #{stopTime },
        </if>
        <if test=" differenceValue != null">
            #{differenceValue },
        </if>
    </sql>

    <sql id="Set_Column_List">
        <if test=" uniqueId != null">
            unique_id = #{uniqueId },
        </if>
        <if test=" startTime != null">
            start_time = #{startTime },
        </if>
        <if test=" stopTime != null">
            stop_time = #{stopTime },
        </if>
        <if test=" differenceValue != null">
            difference_value = #{differenceValue },
        </if>
    </sql>

    <sql id="Where_Column_List">
        <if test=" uniqueId != null">
            and unique_id = #{uniqueId }
        </if>
        <if test=" startTime != null">
            and start_time = #{startTime }
        </if>
        <if test=" stopTime != null">
            and stop_time = #{stopTime }
        </if>
        <if test=" differenceValue != null">
            and difference_value = #{differenceValue }
        </if>
    </sql>

    <insert id="insert" parameterType="com.antiy.asset.entity.AssetRunRecord" useGeneratedKeys="true" keyProperty="id"
            keyColumn="id">
        insert into
        <include refid="Table_Name"></include>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="IF_Base_Column_List"></include>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <include refid="IF_Value_Column_List"></include>
        </trim>
