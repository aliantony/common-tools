<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.antiy.asset.dao.AssetOaOrderHandleDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.antiy.asset.entity.AssetOaOrderHandle">
        <id column="id" property="id"/>
        <result column="order_number" property="orderNumber"/>
        <result column="asset_id" property="assetId"/>
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, order_number, asset_id
    </sql>

    <sql id="Table_Name">
        asset_oa_order_handle
    </sql>


    <sql id="IF_Base_Column_List">
        <if test=" orderNumber != null">
            order_number,
        </if>
        <if test=" assetId != null">
            asset_id,
        </if>
    </sql>

    <sql id="IF_Value_Column_List">
        <if test=" orderNumber != null">
            #{orderNumber },
        </if>
        <if test=" assetId != null">
            #{assetId },
        </if>
    </sql>

    <sql id="Set_Column_List">
        <if test=" orderNumber != null">
            order_number = #{orderNumber },
        </if>
        <if test=" assetId != null">
            asset_id = #{assetId },
        </if>
    </sql>

    <sql id="Where_Column_List">
        <if test=" orderNumber != null">
            and order_number = #{orderNumber }
        </if>
        <if test=" assetId != null">
            and asset_id = #{assetId }
        </if>
    </sql>

    <insert id="insert" parameterType="com.antiy.asset.entity.AssetOaOrderHandle" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">
        insert into
        <include refid="Table_Name"></include>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="IF_Base_Column_List"></include>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <include refid="IF_Value_Column_List"></include>
        </trim>
    </insert>

    <update id="update" parameterType="com.antiy.asset.entity.AssetOaOrderHandle">
        update
        <include refid="Table_Name"></include>
        <trim prefix="SET" suffixOverrides=",">
            <include refid="Set_Column_List"></include>
        </trim>
        where id = #{id}
    </update>

    <!-- 根据主键查询 -->
    <select id="getById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"></include>
        where id = #{id}
    </select>


    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from
        <include refid="Table_Name"></include>
        where id = #{id}
    </delete>

    <select id="getByWhere" resultMap="BaseResultMap" parameterType="java.util.Map">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"></include>
        <where>
            <trim prefixOverrides="and">
                <include refid="Where_Column_List"></include>
            </trim>
        </where>
    </select>


    <select id="getAll" resultMap="BaseResultMap">
        select *
        from
        <include refid="Table_Name"></include>
    </select>


    <select id="findCount" resultType="int" parameterType="com.antiy.common.base.ObjectQuery">
        select count(1)
        from
        <include refid="Table_Name"></include>
        <where>
            <trim prefixOverrides="and">
                <include refid="Where_Column_List"></include>
            </trim>
        </where>
    </select>

    <select id="findQuery" resultMap="BaseResultMap" parameterType="com.antiy.common.base.ObjectQuery">
        select * from
        <include refid="Table_Name"></include>
        <where>
            <trim prefixOverrides="and">
                <include refid="Where_Column_List"></include>
            </trim>
        </where>
        <if test="pageSize !=-1">
            LIMIT #{pageSize} offset #{pageOffset}
        </if>
    </select>

    <!--批量添加-->
    <insert id="insertBatch" parameterType="List" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into asset_oa_order_handle
        (order_number, asset_id)
        VALUES
        <foreach collection="list" item="avr" separator=",">
            (
            #{avr.orderNumber },
            #{avr.assetId }
            )
        </foreach>
    </insert>

    <select id="countLendByAssetId" resultType="integer">
        SELECT count(1)
        FROM asset as a
        LEFT JOIN asset_user as au ON a.responsible_user_id=au.id and au.status=1
        LEFT JOIN asset_key_manage as akm ON a.id=akm.key_user_id and akm.is_delete=1
        LEFT JOIN asset_category_model as acm ON acm.id=a.category_model and acm.status=1
        LEFT JOIN asset_lend_relation as alr ON a.id=alr.asset_id and alr.lend_status =1 and alr.status=1
        LEFT JOIN asset_user ON asset_user.id=alr.use_id and asset_user.status=1
        where a.is_borrow=1
        and a.asset_status =5
        and a.status=1
        and a.id = #{assetId }
    </select>

    <select id="getAssetIdWhenLend" resultType="string" parameterType="java.lang.Integer">
        select tb1.id
        from asset tb1
        left join asset_lend_relation tb2 on tb1.id = tb2.asset_id
        where tb1.is_borrow = 1
        and tb1.asset_status =5
        and tb1.status=1
        and tb2.id is null
    </select>

</mapper>