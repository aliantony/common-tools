                    )
                </when>
                <when test='serviceType == "patchServer"'>
                    and business_id NOT IN (
                    SELECT
                    server_id
                    FROM
                    patch_mapping_server
                    WHERE
                    STATUS = 1
                    AND antiy_patch_number = #{serviceBusinessId}
                    )
                </when>
                <when test='serviceType == "vulServer"'>
                    and business_id NOT IN (
                    SELECT
                    service_id
                    FROM
                    vuln_server
