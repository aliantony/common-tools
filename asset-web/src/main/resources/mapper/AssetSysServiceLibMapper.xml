    <sql id="except">
        <if test="serviceType!=null and serviceBusinessId != null">
            <choose>
                <when test='serviceType == "softwareDepend"'>
                    and business_id NOT IN (
                    SELECT
                    service_id
                    FROM
                    asset_soft_service_relation
                    WHERE
                    STATUS = 1
                    AND soft_id = #{serviceBusinessId}
                    )
                </when>
                <when test='serviceType == "protocol"'>
                    and business_id NOT IN (
                    SELECT
                    service_id
                    FROM
                    asset_service_protocol_relation
                    WHERE
                    STATUS = 1
                    AND protocol_id = #{serviceBusinessId}
                    )
                </when>
                <when test='serviceType == "dependService"'>
                    and business_id NOT IN (
                    SELECT
                    depend_service
                    FROM
                    asset_service_depend
                    WHERE
                    STATUS = 1
                    AND service_id = #{serviceBusinessId}
                    )
                </when>
                <when test='serviceType == "softwareProvide"'>
                    and business_id NOT IN (
                    SELECT
                    service_id
                    FROM
                    asset_soft_service_lib
