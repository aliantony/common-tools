<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.antiy.asset.dao.AssetAssemblyDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.antiy.asset.entity.AssetAssembly">
        <id column="id" property="id"/>
        <result column="asset_id" property="assetId"/>
        <result column="business_id" property="businessId"/>
        <result column="remove" property="remove"/>
        <result column="demagnetization" property="demagnetization"/>
        <result column="smash" property="smash"/>
        <result column="unique_id" property="uniqueId"/>
        <result column="scrap" property="scrap"/>
        <result column="status" property="status"/>
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, asset_id, business_id, remove, demagnetization, smash, unique_id, scrap, status
    </sql>

    <sql id="Table_Name">
        asset_assembly
    </sql>


    <sql id="IF_Base_Column_List">
        <if test=" assetId != null">
            asset_id,
        </if>
        <if test=" businessId != null">
            business_id,
        </if>
        <if test=" remove != null">
            remove,
        </if>
        <if test=" demagnetization != null">
            demagnetization,
        </if>
        <if test=" smash != null">
            smash,
        </if>
        <if test=" uniqueId != null">
            unique_id,
        </if>
        <if test=" scrap != null">
            scrap,
        </if>
        <if test=" status != null">
            status,
        </if>
    </sql>

    <sql id="IF_Value_Column_List">
        <if test=" assetId != null">
            #{assetId },
        </if>
        <if test=" businessId != null">
            #{businessId },
        </if>
        <if test=" remove != null">
            #{remove },
        </if>
        <if test=" demagnetization != null">
            #{demagnetization },
        </if>
        <if test=" smash != null">
            #{smash },
        </if>
        <if test=" uniqueId != null">
            #{uniqueId },
        </if>
        <if test=" scrap != null">
            #{scrap },
        </if>
        <if test=" status != null">
            #{status },
        </if>
    </sql>

    <sql id="Set_Column_List">
        <if test=" assetId != null">
            asset_id = #{assetId },
        </if>
        <if test=" businessId != null">
            business_id = #{businessId },
        </if>
        <if test=" remove != null">
            remove = #{remove },
        </if>
        <if test=" demagnetization != null">
            demagnetization = #{demagnetization },
        </if>
        <if test=" smash != null">
            smash = #{smash },
        </if>
        <if test=" uniqueId != null">
            unique_id = #{uniqueId },
        </if>
        <if test=" scrap != null">
            scrap = #{scrap },
        </if>
        <if test=" status != null">
            status = #{status },
        </if>
    </sql>

    <sql id="Where_Column_List">
        <if test=" assetId != null">
            and asset_id = #{assetId }
        </if>
        <if test=" businessId != null">
            and business_id = #{businessId }
        </if>
        <if test=" remove != null">
            and remove = #{remove }
        </if>
        <if test=" demagnetization != null">
            and demagnetization = #{demagnetization }
        </if>
        <if test=" smash != null">
            and smash = #{smash }
        </if>
        <if test=" uniqueId != null">
            and unique_id = #{uniqueId }
        </if>
        <if test=" scrap != null">
            and scrap = #{scrap }
        </if>
        <if test=" status != null">
            and status = #{status }
        </if>
    </sql>

    <insert id="insert" parameterType="com.antiy.asset.entity.AssetAssembly" useGeneratedKeys="true" keyProperty="id"
            keyColumn="id">
        insert into
        <include refid="Table_Name"></include>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="IF_Base_Column_List"></include>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <include refid="IF_Value_Column_List"></include>
        </trim>
    </insert>

    <update id="update" parameterType="com.antiy.asset.entity.AssetAssembly">
        update
        <include refid="Table_Name"></include>
        <trim prefix="SET" suffixOverrides=",">
            <include refid="Set_Column_List"></include>
        </trim>
        where id = #{id}
    </update>

    <!-- 根据主键查询 -->
    <select id="getById" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"></include>
        where id = #{id}
    </select>

    <delete id="deleteById" parameterType="java.lang.String">
        delete from
        <include refid="Table_Name"></include>
        where id = #{id}
    </delete>

    <select id="getByWhere" resultMap="BaseResultMap" parameterType="java.util.Map">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"></include>
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
        </trim>
    </select>

    <sql id="where">
        <trim prefix="WHERE" prefixOverrides="AND | OR ">
            <if test="assetId != null and assetId != ''">
                and lib.business_id not in
                (select business_id from asset_assembly where asset_id = #{assetId} and status = 1)
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="supplier != null and supplier.length() > 0">
                and supplier like CONCAT('%',replace(replace(#{supplier},'%','\%'),'_','\_'),'%')
            </if>
            <if test="productName != null and productName.length() > 0">
                and product_name like CONCAT('%',replace(replace(#{productName},'%','\%'),'_','\_'),'%')
            </if>
            and lib.status = 1
        </trim>
    </sql>
    <select id="findCount" resultType="int" parameterType="com.antiy.common.base.ObjectQuery">
        select count(1) from asset_assembly_lib lib
        <include refid="where"></include>
    </select>

    <select id="findQuery" resultMap="BaseResultMap" parameterType="com.antiy.common.base.ObjectQuery">
        select lib.type, lib.supplier, lib.product_name, lib.business_id from asset_assembly_lib lib
        <include refid="where"></include>
        <if test="pageSize !=-1">
            LIMIT #{pageSize} offset #{pageOffset}
        </if>
    </select>

    <select id="findAssemblyIds" resultType="string">
        select business_id from asset_assembly where asset_id = #{assetId} and status = 1
    </select>
    <select id="findAssemblyByAssetId" resultType="com.antiy.asset.vo.request.AssetAssemblyRequest">
        SELECT
        distinct
        t1.business_id as businessId,
        t2.product_name as productName,
        t2.type,
        t1.remove,
        t1.demagnetization,
        t1.smash,
        t1.unique_id as uniqueId,
        t1.scrap
        FROM
        asset_assembly t1
        LEFT JOIN asset_assembly_lib t2 ON t1.business_id = t2.business_id
        AND t2.`status` = 1
        WHERE
        t1.asset_id = #{assetId}
        <if test="type != null and type != ''">
            and t2.type = #{type}
        </if>
        AND t1.`status` = 1
    </select>
    <update id="updateByUniqueId">
        <foreach collection="list" item="item" separator=";">
            update
            asset_assembly
            <trim suffixOverrides=",">
                <if test="item.remove !=null">
                    set remove=#{item.remove},
                </if>
                <if test="item.demagnetization !=null">
                    set demagnetization=#{item.demagnetization},
                </if>
                <if test="item.smash !=null">
                    set smash=#{item.smash},
                </if>
            </trim>
            where unique_id=#{item.uniqueId} and status=1
        </foreach>
    </update>
    <select id="findAssemblyByBusiness" resultType="integer">
  select count(1) from asset_assembly_lib     where  business_id =#{businessId} and  status =1
    </select>
    <!--删除资产与组件关系-->
    <delete id="deleteAssemblyRelation">
        update asset_assembly set status = 0 where asset_id = #{assetId}
    </delete>

    <insert id="insertBatch" parameterType="com.antiy.asset.entity.AssetAssembly">
        insert into
        <include refid="Table_Name"></include>
        (
        asset_id,
        unique_id,
        business_id
        )
        values
        <foreach collection="assetAssemblyList" item="item" separator=",">
            (
            #{item.assetId},
            #{item.uniqueId},
            #{item.businessId}
            )
        </foreach>
    </insert>

</mapper>