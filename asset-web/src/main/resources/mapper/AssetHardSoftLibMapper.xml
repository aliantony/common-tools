    <!--排除已存在的资产id-->
    <select id="exceptIds" resultType="java.lang.Long">
        <choose>
            <when test="assetType == 'h'">
                select hard_id from asset_hard_assembly_relation where assembly_id = #{businessId} and status = 1
            </when>
            <when test="assetType == 'a'">
                <choose>
                    <when test="sourceType == 'assembly'">
                        select soft_id from asset_assembly_soft_relation where assembly_id = #{businessId} and status =
                        1
                    </when>
                    <when test="sourceType == 'protocol'">
                        select soft_id from asset_soft_protocol_relation where protocol_id = #{businessId} and status =
                        1
                    </when>
                    <when test="sourceType == 'dependService'">
                        select soft_id from asset_soft_service_relation where service_id = #{businessId} and status = 1
                    </when>
                    <when test="sourceType == 'supplyService'">
                        select soft_id from asset_soft_service_lib where service_id = #{businessId} and status = 1
                    </when>
                </choose>
            </when>
            <otherwise>
            </otherwise>
        </choose>
    </select>
