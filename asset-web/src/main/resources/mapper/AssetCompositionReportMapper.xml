        </if>
        <if test=" userId != null">
            #{userId },
        </if>
        <if test=" gmtCreate != null">
            #{gmtCreate },
        </if>
        <if test=" status != null">
            #{status },
        </if>
    </sql>

    <sql id="Set_Column_List">
        <if test=" queryCondition != null">
            query_condition = #{queryCondition },
        </if>
        <if test=" name != null">
            name = #{name },
        </if>
        <if test=" userId != null">
