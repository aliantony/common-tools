    <select id="queryBasePerformance" resultMap="BasePerformance">
        select
        asm.id as stringId,
        asm.network_status,
        asm.cpu_used_rate ,
        asm.memory_used_rate ,
        asm.disk_total ,
        asm.disk_used ,
        asm.disk_totalused_rate,
        asm.disk_detail ,
        asm.rule_id,
        asm.gmt_modified ,
        amr.alarm_level ,
        amr.rule_status ,
        amr.cpu_threshold ,
        amr.memory_threshold,
        amr.disk_threshold,
        amr.runtime_exception_threshold
        from
        asset_status_monitor as asm
        left join asset_monitor_rule as amr
        on amr.id=asm.rule_id and amr.status=1
        where asset_id=#{assetId}
        and `type`=4
        and asm.status=1
        order by asm.gmt_modified desc
        limit 1
    </select>
