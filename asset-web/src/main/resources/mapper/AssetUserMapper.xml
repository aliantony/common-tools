        <if test=" name != null">
            AND a.name like binary concat('%',replace(replace(#{name },'%','\%'),'_','\_'),'%')
        </if>

        <if test=" email != null">
            AND a.email like concat('%', replace(replace(#{email },'%','\%'),'_','\_'),'%')
