        b.name as departmentName,
        a.email, a.qq, a.weixin, a.mobile, a.address,detail_address as detailAddress, position, a.create_user AS
        createUser, a.modify_user AS modifyUser,
        a.gmt_create AS gmtCreate, a.gmt_modified AS gmtModified, a.status,a.memo
        from asset_user a left join asset_department b on a.department_id = b.id
