    <select id="findAssetInstallList" parameterType="com.antiy.asset.vo.query.AssetSoftwareQuery"
            resultType="com.antiy.asset.entity.AssetSoftwareInstall">
        select
        c.id,
        c.asset_id as assetId,
        c.software_id as softwareId,
        a.number,
        a.name,
        d.id as userId,
        d.name as userName,
        group_concat( b.ip_address ) as ip,
        group_concat( b.mac_address ) as mac,
        a.serial,
        a.category_model as categoryModel,
        a.manufacturer,
        c.install_type as installType,
        c.install_status as installStatus,
        c.install_time as installTime
        from
        asset a
        left join asset_network_card b on a.id = b.asset_id
        left join asset_software_relation c on a.id = c.asset_id
        left join asset_user d on a.responsible_user_id = d.id
        where 1 = 1
