    <select id="findAssetInstallCount" parameterType="com.antiy.asset.vo.query.AssetSoftwareQuery"
            resultType="java.lang.Integer">
        select
        count(1) as count
        from
        asset a
        left join asset_network_card b on a.id = b.asset_id
        left join asset_software_relation c on a.id = c.asset_id
        where 1 = 1
        and c.software_id = #{id}
        and c.id is not null
        <if test=" multipleQuery != null">
            and (a.name LIKE CONCAT('%',#{multipleQuery},'%')
            or a.number LIKE CONCAT('%',#{multipleQuery},'%')
            or a.serial LIKE CONCAT('%',#{multipleQuery},'%'))
