        SELECT
            asoft.id,
            asoft.size,
            asoft.operation_system AS operationSystem,
            asoft.category,
            asoft.model,
            asoft.NAME,
            asoft.upload_software_name AS uploadSoftwareName,
            asoft.path,
            asoft.version,
            asoft.manufacturer,
            asoft.description,
